#!/bin/sh

set -o errexit

. make/include/colors.sh

printf "%b==> Linting%b\n" "${OK_COLOR}" "${ERROR_COLOR}"

ISSUES=$(mktemp)

trap "cat ${ISSUES} ; rm -f ${ISSUES}" EXIT

go list -f '{{ .Dir }}' ./... | while read DIR; do
    # There's a bunch of generated files we don't need to lint
    case "${DIR#${PWD}}" in
        /vendor/*)                         continue;;
    esac
    golint "${DIR}" >> "${ISSUES}"
done

printf "%b" "${NO_COLOR}"

test ! -s "${ISSUES}"
